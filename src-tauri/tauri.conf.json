{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "enteract",
  "version": "0.1.0",
  "identifier": "com.enteract.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Agentic Assistant",
        "width": 800,
        "height": 600,
        "minWidth": 300,
        "minHeight": 80,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "resizable": true,
        "shadow": true,
        "visibleOnAllWorkspaces": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
